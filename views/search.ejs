<%- include("partials/header"); %>
    <h1>Enter a search term and press submit to search for photos:</h1>
    <!-- here -->
    <form action="/pics" method="GET" style="margin: 8px;">
        <div class="form-group" >
            <input type="text" class="form-control" id="exampleFormControlInput1" placeholder="e.g. flowers"
            name="searchterm" style="width: 400px; margin: 8px;">
        </div>
        <label>Page number:</label>
        <div class="form-group" >
            <input type="text" class="form-control" id="exampleFormControlInput1" 
            value="1" name="page" style="width: 400px; margin: 8px;">
        </div>
        <button type="submit" class="btn btn-primary" style="margin: 8px;">Submit</button>   
    </form>
